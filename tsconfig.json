{
    "extends": "@oathompsonjones/ts-config",
    "compilerOptions": {
        "target": "es5",
        "skipLibCheck": true,
        "noEmit": true,
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@mui/*": [
                "./src/components/mui/*"
            ],
            "@node_mui/*": [
                "./node_modules/@mui/*"
            ],
            "components/*": [
                "./src/components/*"
            ],
            "contexts/*": [
                "./src/contexts/*"
            ],
            "hooks/*": [
                "./src/hooks/*"
            ],
            "api/*": [
                "./src/app/api/*"
            ],
            "pages/*": [
                "./src/app/(pages)/*"
            ],
            "redirects/*": [
                "./src/app/(redirects)/*"
            ],
            "app/*": [
                "./src/app/*"
            ],
            "images/*": [
                "./src/images/*"
            ],
            "assets/*": [
                "./src/assets/*"
            ],
            "config": [
                "./src/config"
            ],
            "utils": [
                "./src/utils"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}